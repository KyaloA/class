#include <iostream>
using namespace std;

int main(){
    int opt;

    cout<<"Hi, This is your DBIT Sem 1 timetable (Sep-Dec 2021)";
    cout<< "\n1.Monday\n2.Tuesday\n3.Wednesday\n4.Thursday\n5.Friday";
    cout<<"\nPlease select day of choice (e.g.1,2,3,etc...)"<<endl;
cin>>opt;

switch (opt){
case 1:
cout<<"Monday Classes\n...................."<<endl;
cout<<"\t1. DBIT 1106: Math for Biz"<<endl;
cout<<"\t2. DBIT 1102: Intro to Programming"<<endl;
break;
case 2:
cout<<"Tuesday Classes\n..................."<<endl;
cout<<"\t2. DBIT 1102: Intro to Programming"<<endl;
cout<<"\t1. DBIT 1104: Ethics"<<endl;
break;
case 3:
cout<< "Wednesday Classes\n................"<<endl;
cout<<"\t1. DBIT 1103: Fundamentals of Accounting"<<endl;
cout<<"\t2. DBIT 1101: Fundamentals of IT"<<endl;
break;

case 4:
cout<< "Thursday Classes\n................"<<endl;
cout<<"\t1. DBIT 1105: Business Communication"<<endl;
cout<<"\t2. DBIT 1106: Math for Biz"<<endl;
break;

case 5:
cout<< "Friday Classes\n................"<<endl;
cout<<"\t1. DBIT 1103: Fundamentals of Accounting"<<endl;
cout<<"\t2. DBIT 1105: Fundamentals of IT"<<endl;

default:
cout<<"Invalid Input";

}
return 0;
}
